                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="3*" />
                                </Grid.RowDefinitions>
                                <Border BorderBrush="Black" BorderThickness="0,0,0,4" Background="LightBlue"/>
                            </Grid>
                        </Border>

                        <Border Grid.Row="10" Grid.Column="3" BorderBrush="Black" BorderThickness="2">
                            <Grid Background="White">

                            </Grid>
                        </Border>

