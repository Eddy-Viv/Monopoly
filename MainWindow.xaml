                                </Grid.ColumnDefinitions>
                                <Border BorderBrush="Black" BorderThickness="0,0,4,0" Background="Green" />
                            </Grid>
                        </Border>

                        <Border Grid.Row="2" BorderBrush="Black" BorderThickness="2" MouseEnter="MAR_Mouseover">
                            <Grid  Background="White">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="1" BorderBrush="Black" BorderThickness="4,0,0,0" Background="Orange" />
                            </Grid>
                        </Border>

                        <Border Grid.Row="2" Grid.Column="10" BorderBrush="Black" BorderThickness="2" MouseEnter="OXF_Mouseover">
                            <Grid   Background="White">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="3*" />
