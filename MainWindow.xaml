                            <Grid Background="White">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="3*" />
                                </Grid.RowDefinitions>
                                <Border BorderBrush="Black" BorderThickness="0,0,0,4" Background="LightBlue"/>
                            </Grid>
                        </Border>

                        <Border Grid.Row="10" Grid.Column="5" BorderBrush="Black" BorderThickness="2">
                            <Grid Background="White">

                            </Grid>
                        </Border>

                        <Border Grid.Row="10" Grid.Column="6" BorderBrush="Black" BorderThickness="2">
                            <Grid Background="White">

                            </Grid>
                        </Border>

                        <Border Grid.Row="10" Grid.Column="7" BorderBrush="Black" BorderThickness="2" MouseEnter="WHR_Mouseover">
                            <Grid Background="White">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="3*" />
                                </Grid.RowDefinitions>
                                <Border BorderBrush="Black" BorderThickness="0,0,0,4" Background="Brown"/>
                            </Grid>
                        </Border>

                        <Border Grid.Row="10" Grid.Column="8" BorderBrush="Black" BorderThickness="2">
                            <Grid Background="White">

                            </Grid>
                        </Border>

                        <Border Grid.Row="10" Grid.Column="9" BorderBrush="Black" BorderThickness="2" MouseEnter="KEN_Mouseover">
                            <Grid Background="White">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="3*" />
                                </Grid.RowDefinitions>
                                <Border BorderBrush="Black" BorderThickness="0,0,0,4" Background="Brown"/>
                            </Grid>
                        </Border>

                        <Border Grid.Row="10" Grid.Column="10" BorderBrush="Black" BorderThickness="2">
                            <Grid Background="White">
                                <Viewbox Margin="5">
                                    <TextBlock TextAlignment="Center" FontWeight="Bold" > GO</TextBlock>
                                </Viewbox>
                            </Grid>
                        </Border>

                        <Grid Grid.Row="1" Grid.RowSpan="3" Grid.Column="4" Grid.ColumnSpan="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="7*"/>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="1" BorderBrush="White" BorderThickness="4" Background="DarkOrange" Margin="10">
                                <Viewbox  Stretch="Uniform">
                                    <TextBlock TextAlignment="Center" FontWeight="Bold"> ? </TextBlock>
                                </Viewbox>
                            </Border>
                            <Viewbox Grid.Row="2" Stretch="Uniform">
                                <TextBlock TextAlignment="Center" Foreground="White"> Chance</TextBlock>
                            </Viewbox>
                        </Grid>
                        
                        <Grid Grid.Row="4" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="9">
                            <Viewbox Margin="20" Stretch="Fill">
                                <Grid>
                                    <TextBlock Background="Red" Foreground="Black" FontWeight="Bold" Margin="0,1,0,0" > MONOPOLY</TextBlock>
                                    <TextBlock Foreground="White" FontWeight="Bold" Margin="1,0,0,1" > MONOPOLY</TextBlock>
                                </Grid>
                            </Viewbox>

                        </Grid>

                        <Grid Grid.Row="7" Grid.RowSpan="3" Grid.Column="4" Grid.ColumnSpan="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="7*"/>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="1" BorderBrush="White" BorderThickness="4" Background="DeepSkyBlue" Margin="10">
                                <Viewbox  Stretch="Uniform">
                                    <TextBlock TextAlignment="Center" FontWeight="Bold"> ??</TextBlock>
                                </Viewbox>
                            </Border>
                            <Viewbox Grid.Row="2" Stretch="Uniform">
                                <TextBlock TextAlignment="Center" Foreground="White"> Community Chest</TextBlock>
                            </Viewbox>
                        </Grid>

                    </Grid>
                </Border>
            </Viewbox>
            
            <Grid DockPanel.Dock="Right">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="8*"/>
                </Grid.RowDefinitions>
                <Viewbox DockPanel.Dock="Top" Stretch="Uniform" Margin="10" MouseUp="Dice_Click">
                    <Border Height="1000" Width="2000">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Margin="10" Background="White" BorderBrush="Black" BorderThickness="10" CornerRadius="100" >
                                <Canvas >
                                    <Ellipse Name="Dot_1_1" Canvas.Top="80" Canvas.Left="80" Width="160" Height="160" Fill="Black" />
                                    <Ellipse Name="Dot_1_2" Canvas.Top="400" Canvas.Left="80" Width="160" Height="160" Fill="Black" />
                                    <Ellipse Name="Dot_1_3" Canvas.Bottom="80" Canvas.Left="80" Width="160" Height="160" Fill="Black" />
                                    <Ellipse Name="Dot_1_4" Canvas.Top="400" Canvas.Left="400" Width="160" Height="160" Fill="Black" />
                                    <Ellipse Name="Dot_1_5" Canvas.Top="80" Canvas.Right="80" Width="160" Height="160" Fill="Black" />
                                    <Ellipse Name="Dot_1_6" Canvas.Top="400" Canvas.Right="80" Width="160" Height="160" Fill="Black" />
                                    <Ellipse Name="Dot_1_7" Canvas.Bottom="80" Canvas.Right="80" Width="160" Height="160" Fill="Black" />
                                </Canvas>
                            </Border>
                            <Border Grid.Column="1" Margin="10" Background="White" BorderBrush="Black" BorderThickness="10" CornerRadius="100" >
                                <Canvas >
                                    <Ellipse Name="Dot_2_1" Canvas.Top="80" Canvas.Left="80" Width="160" Height="160" Fill="Black" />
                                    <Ellipse Name="Dot_2_2" Canvas.Top="400" Canvas.Left="80" Width="160" Height="160" Fill="Black" />
                                    <Ellipse Name="Dot_2_3" Canvas.Bottom="80" Canvas.Left="80" Width="160" Height="160" Fill="Black" />
                                    <Ellipse Name="Dot_2_4" Canvas.Top="400" Canvas.Left="400" Width="160" Height="160" Fill="Black" />
                                    <Ellipse Name="Dot_2_5" Canvas.Top="80" Canvas.Right="80" Width="160" Height="160" Fill="Black" />
                                    <Ellipse Name="Dot_2_6" Canvas.Top="400" Canvas.Right="80" Width="160" Height="160" Fill="Black" />
                                    <Ellipse Name="Dot_2_7" Canvas.Bottom="80" Canvas.Right="80" Width="160" Height="160" Fill="Black" />
                                </Canvas>
                            </Border>
                        </Grid>
                    </Border>
                </Viewbox>
                <Viewbox Grid.Row="1" Stretch="Uniform" Margin="10">
                    <Grid Height="4000" Width="3000" Name="PropertyCardView">
                        <uc:KEN/>
                    </Grid>
                </Viewbox>
            </Grid>
            
            <Grid></Grid>
        </DockPanel>
    </DockPanel>
